<p id="notice"><%= notice %></p>

<h1 id="header_for_products_page"> <%= t('.catalog') %> </h1>

<span id="button_new_product">
<%= link_to t('.new_product'), new_product_path %>
</span>

<div class="wrapper">
  <% @products.each do |product| %>
    <div class="<%= cycle('grid_item_in_column_1', 'grid_item_in_column_2') %> grid_item_basic" >

      <div class="product_grid_wrapper">
        <div class="image_wrapper">
          <%= image_tag(product.image_url, class: 'image_in_grid') %>
        </div>
        <div class="details_in_grid">
          <div class="title_of_product"><%= product.title %></div>
          <%= number_to_currency(product.price) %>

          <hr>
          <div id="description">
            <%= truncate(strip_tags(product.description), length: 70) %>
          </div>
          <div id="options_for_product">
            <%= link_to 'Show', product %>
            <%= link_to 'Edit', edit_product_path(product) %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>